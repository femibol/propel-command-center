# Copy this to .env and fill in your values
# DO NOT commit .env to version control

# Monday.com API Token
# Get from: Monday.com > Profile Picture > Developers > My Access Tokens
VITE_MONDAY_API_TOKEN=your_monday_api_token_here

# Monday.com account slug (for "Open in Monday" links)
VITE_MONDAY_ACCOUNT_SLUG=your-account-slug

# Anthropic API Key (server-side only, for AI features)
# Get from: console.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Timely Memory SQLite database path (auto-detected on Windows)
# TIMELY_DB_PATH=C:\Users\YourUser\AppData\Local\TimelyApp\Memory\data\db.sqlite

# Server port
PORT=3001
